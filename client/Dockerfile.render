# Dockerfile para Render.com - Frontend
FROM node:20-alpine AS builder

WORKDIR /app

# La URL de la API se pasar치 como build arg desde Render
ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm ci

# Copiar el resto de los archivos
COPY . .

# Construir la aplicaci칩n
RUN npm run build

# Imagen de producci칩n con Nginx
FROM nginx:alpine

# Copiar los archivos construidos
COPY --from=builder /app/dist /usr/share/nginx/html

# Copiar configuraci칩n de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Render usa el puerto de la variable PORT
EXPOSE 10000

# Configurar Nginx para usar el puerto de Render
RUN sed -i 's/listen 80;/listen 10000;/' /etc/nginx/conf.d/default.conf

CMD ["nginx", "-g", "daemon off;"]


